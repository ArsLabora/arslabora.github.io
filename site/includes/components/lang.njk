<ul class="pt-20">

    <!-- Landing Page Navigation -->
    {% for item in locales.languages %}
        <li class="pb-4 level-1 mb-4 md:mr-4 md:mb-0 list-none">
            <a href="{{ site.url }}{{ item.code | safe }}/" class="link font-bold text-black hover:text-pink-500 {% if page.url == item.url %}active text-pink-500{% endif %}
            "{% if page.url == item.url %} aria-current="page"{% endif %}>{{ item.label }}</a>
        </li>
    {% endfor %}
</ul>