<nav id="nav" class="nav hidden md:flex">

    <ul class="menu flex flex-col md:flex-row langs-center list-reset text-base">

        <!-- Website Navigation -->
        {% for lang in navigation[locale] %}

            <li class="level-1 mb-4 md:mr-4 md:mb-0">
                <a href="{{ site.url }}{{ lang.url | safe }}" class="link font-bold text-white hover:text-pink-500 {% if page.url == lang.url %}active text-pink-500{% endif %}
                "{% if page.url == lang.url %} aria-current="page"{% endif %}>{{ lang.label }}</a>
            </li>

        {% endfor %}
    </ul>

</nav>